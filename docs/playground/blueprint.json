{
  "preferredVersions": {
    "php": "8.2",
    "wp": "latest"
  },
  "phpExtensionBundles": [
    "kitchen-sink"
  ],
  "features": {
    "networking": true
  },
  "landingPage": "/?p=1",
  "steps": [
    {
      "step": "login",
      "username": "admin",
      "password": "password"
    },
    {
      "step": "installPlugin",
      "pluginZipFile": {
        "resource": "url",
        "url": "https://github-proxy.com/proxy/?repo=bigbite/image-comparison&branch=main-built"
      },
      "options": {
        "activate": true
      }
    },
    {
      "step": "wp-cli",
      "command": "wp media import --post_id=1 https://raw.githubusercontent.com/bigbite/image-comparison/main/docs/playground/before.png"
    },
    {
      "step": "wp-cli",
      "command": "wp media import --post_id=1 https://raw.githubusercontent.com/bigbite/image-comparison/main/docs/playground/after.png"
    },
    {
      "step": "runPHP",
      "code": "<?php require_once 'wordpress/wp-load.php';wp_delete_comment(1);$GLOBALS['wpdb']->update('wp_posts',['post_title'=>'Image Comparison Example','post_content'=>base64_decode(''),'comment_status'=>'closed','ping_status'=>'closed'],['id'=>1]);?>"
    }
  ]
}
